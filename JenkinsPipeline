pipeline {
   agent any

   stages {
      stage('Build') {
        steps{
            // To run Maven on a Windows agent, use
            bat "mvn clean"
        }
      }
      
      stage('Test') {
        steps{
            // To run Maven on a Windows agent, use
            bat "mvn test"
        }
      }
      
      stage('Deploy') {
        steps{
            // To run Maven on a Windows agent, use
            bat "mvn package"
        }
      }
   }
}